<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckingReview">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/teal_700">

        <ImageButton
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="20dp"
            android:id="@+id/ib_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:layout_gravity="center_vertical|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:textSize="30dp"
            android:text="대마고 급식 평가" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:fontFamily="@font/bmjua"
        android:textSize="15dp"
        android:text="우리학교 급식에 대한 학생들의 평가를 솔찍하게 적어주시길 바랍니다." />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bmjua"
        android:text="[1] 음식의 간은 적당하다" />
    <RadioGroup
        android:id="@+id/rg1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1_btn1"
            android:textSize="8dp"
            android:text="매우 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1_btn2"
            android:textSize="8dp"
            android:text="조금 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1_btn3"
            android:textSize="8dp"
            android:text="보통이다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1_btn4"
            android:textSize="8dp"
            android:text="조금 그렇다 않다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r1_btn5"
            android:textSize="8dp"
            android:text="전혀 그렇지 않다"/>
    </RadioGroup>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bmjua"
        android:text="[2] 급식실 아주머니들의 방역은 잘 지켜지고있다.(마스크 착용... 등)" />
    <RadioGroup
        android:id="@+id/rg2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2_btn1"
            android:textSize="8dp"
            android:text="매우 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2_btn2"
            android:textSize="8dp"
            android:text="조금 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2_btn3"
            android:textSize="8dp"
            android:text="보통이다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2_btn4"
            android:textSize="8dp"
            android:text="조금 그렇다 않다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r2_btn5"
            android:textSize="8dp"
            android:text="전혀 그렇지 않다"/>
    </RadioGroup>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bmjua"
        android:text="[3] 코로나 확산 방지를 위한 거리두기가 잘 시행되고있다." />
    <RadioGroup
        android:id="@+id/rg3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3_btn1"
            android:textSize="8dp"
            android:text="매우 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3_btn2"
            android:textSize="8dp"
            android:text="조금 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3_btn3"
            android:textSize="8dp"
            android:text="보통이다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3_btn4"
            android:textSize="8dp"
            android:text="조금 그렇다 않다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r3_btn5"
            android:textSize="8dp"
            android:text="전혀 그렇지 않다"/>
    </RadioGroup>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bmjua"
        android:text="[4] 급식실 환경관리가 잘 이루어지고있다. (예 : 온도, 습도 등..)" />
    <RadioGroup
        android:id="@+id/rg4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4_btn1"
            android:textSize="8dp"
            android:text="매우 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4_btn2"
            android:textSize="8dp"
            android:text="조금 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4_btn3"
            android:textSize="8dp"
            android:text="보통이다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4_btn4"
            android:textSize="8dp"
            android:text="조금 그렇다 않다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r4_btn5"
            android:textSize="8dp"
            android:text="전혀 그렇지 않다"/>
    </RadioGroup>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/bmjua"
        android:text="[5] 우리학교 급식에 전반적으로 만족한다." />
    <RadioGroup
        android:id="@+id/rg5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5_btn1"
            android:textSize="8dp"
            android:text="매우 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5_btn2"
            android:textSize="8dp"
            android:text="조금 그렇다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5_btn3"
            android:textSize="8dp"
            android:text="보통이다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5_btn4"
            android:textSize="8dp"
            android:text="조금 그렇다 않다"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r5_btn5"
            android:textSize="8dp"
            android:text="전혀 그렇지 않다"/>
    </RadioGroup>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 평균 : " />
        <TextView
            android:id="@+id/tv_estimatedGPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/restaurent" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_setGPA1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#009688"
                android:fontFamily="@font/bmjua"
                android:text="제출(Submit)" />

            <Button
                android:id="@+id/btn_setGPA2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFC107"
                android:fontFamily="@font/bmjua"
                android:text="추가로 문의하기" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>