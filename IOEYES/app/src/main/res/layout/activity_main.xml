<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8F0A9"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toStartOf="@+id/rv"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="65dp"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/firstline"
        android:layout_width="90dp"
        android:layout_height="320dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@+id/tv">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="2"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="L"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="5"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="7"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondline"
        android:layout_width="90dp"
        android:layout_height="320dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="@id/fourline"
        app:layout_constraintStart_toEndOf="@+id/firstline"
        app:layout_constraintTop_toBottomOf="@+id/tv">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="A"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="H"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="J"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="8"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdline"
        android:layout_width="90dp"
        android:layout_height="320dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@id/fourline"
        app:layout_constraintTop_toBottomOf="@+id/tv">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="1"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="3"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="B"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="0"
            android:textSize="48sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourline"
        android:layout_width="90dp"
        android:layout_height="320dp"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="@id/right_line"
        app:layout_constraintTop_toBottomOf="@+id/tv">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="K"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="W"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="9"
            android:textSize="48sp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@drawable/buttondesign"
            android:text="알수 없음
"            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>