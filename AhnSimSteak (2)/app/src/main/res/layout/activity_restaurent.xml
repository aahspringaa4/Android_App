<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestaurentActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘은 뭘 먹을까?"
            android:fontFamily="@font/bitcore"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="30dp" />

        <ImageButton
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:id="@+id/map"
            android:layout_width="43dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_map" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/korean"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bibimbap" />

            <TextView
                android:id="@+id/hansick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:textSize="30dp"
                android:text="한식" />

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/sushi"
                android:layout_width="200dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/chobuvb"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/japanese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:textSize="30dp"
                android:text="일식" />

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/jjajangmyeon"
                android:layout_width="200dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/jjajangmyeong"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/china"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:textSize="30dp"
                android:text="중식" />

            <ImageButton
                android:layout_marginTop="20dp"
                android:id="@+id/pasta"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/spagetti" />

            <TextView
                android:id="@+id/europe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:textSize="30dp"
                android:text="양식" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/hamburger"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/fastfood" />

            <TextView
                android:id="@+id/fastfood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:text="패스트 푸드"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/tteok"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/bunsick" />

            <TextView
                android:id="@+id/bunsick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:text="분식"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/mix"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/mix" />

            <TextView
                android:id="@+id/dessert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:text="카페 및 디저트"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/rank"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/fsfsds" />

            <TextView
                android:id="@+id/topten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeul"
                android:text="청결도 랭킹"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ad"
        android:layout_marginBottom="5dp"/>
</LinearLayout>